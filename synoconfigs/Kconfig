	default y
	help
	  Say Y here to support PHY LED behavior control

config SYNO_QORIQ_FIX_DISK_WAKE_BEFORE_DEEPSLEEP
	bool "Fix disk will wakeup before deepsleep"
	depends on SYNO_QORIQ
	default y
	help
	  Say Y here to let disk don't wakeup before deepsleep

config SYNO_QORIQ_DISABLE_KMSG_BEFORE_SYSSLEEP
	bool "Disable /proc/kmsg to prevent disk wakeup before system deepsleep, see bug <DSM> #55224"
	depends on SYNO_QORIQ
	default y
	help
	  Say Y here to disable /proc/kmsg to prevent disk wakeup before system deepsleep, see bug <DSM> #55224

