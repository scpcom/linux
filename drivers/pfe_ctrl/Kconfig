#
# MindSpeed pfe support (added by Andy, 2014/07/08)
#

config PFE_CTRL
        tristate "MindSpeed pfe support"
        default m
        depends on ARM
        help
                MindSpeed pfe kernel module
                (copied from "MindSpeed_OpenWRT/sdk-comcerto-openwrt-c2k_nas_3.1-rc2/package/mindspeed/pfe_ctrl")

config PFE_HOTPLUG_CPU
	bool "pfe cpu hotplug"
	default n
	depends on PFE_CTRL && HOTPLUG_CPU
	help
		Enable pfe cpu hotplug

config PFE_WIFI_OFFLOAD
	bool "pfe wifi offload"
	default n
	depends on PFE_CTRL
	help
		Enable pfe wifi offload
