/dts-v1/;
#include "rk3399pro-firefly-port.dtsi"

/ {
	model = "RK3399pro-firefly-aiojd4 board";
	compatible = "rockchip,rk3399pro-firefly-aiojd4", "rockchip,rk3399pro";
};
/*
&hdmi_dp_sound {
	status = "okay";
};
*/
&hdmi_in_vopl {
	status = "disabled";
};

&hdmi_in_vopb {
	status = "okay";
};

&dp_in_vopb {
	status = "disabled";
};

&route_hdmi {
        status = "okay";
        logo,mode = "center";
};

&vopb {
    assigned-clocks = <&cru DCLK_VOP0_DIV>;
    assigned-clock-parents = <&cru PLL_VPLL>;
};
&vopl {
    assigned-clocks = <&cru DCLK_VOP1_DIV>;
    assigned-clock-parents = <&cru PLL_CPLL>;
};

// Disable DP Display

&cdn_dp {
	status = "disabled";
	extcon = <&fusb0>;
	phys = <&tcphy0_dp>;
};

&fusb0 {
    status = "disabled";
};

&tcphy0 {
    /delete-property/ extcon;
    status = "okay";
};

&u2phy0 {
    status = "okay";
    /delete-property/ extcon;

    u2phy0_otg: otg-port {
        rockchip,vbus-always-on;
        vbus-5v-gpios = <&gpio4 RK_PC5 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };
};

&usbdrd3_0 {
    status = "okay";
    /delete-property/ extcon;
};

